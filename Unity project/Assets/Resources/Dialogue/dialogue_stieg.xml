<?xml version="1.0" encoding="utf-8" ?>


<dialog name="Stieg">
	<brush-off text="Git! I'm trying to chat up your mom's friend!" />

	<opener tag="" id="I'm bored!">
		<question text="Haha! Sure you are. So what would you like, o lord of the party?" >
			<answer text="Flowers! Flowers everywhere!">
				<script function="ParticlesFromSky" param="flowers" />
			</answer>
			<answer text="Vibrators!">
				<script function="vibrate" tag="adult" />
			</answer>
			<answer text="Animals!">
				<script function="changeModels" tag="furniture" param="cat" />
			</answer>
		</question>
	</opener>
					
	<opener tag="" id="Are you sad?">
		<response text="I guess I should be, but I didn't know her super well. Honestly it's your mom that makes me sad at this point. I can only imagine - if I were to loser your dad like that, I'd be a wreck too. Sorry, I'm rambling." />
	</opener>
					
	<opener tag="" id="I want you to leave!">
		<question text="Aw, man! Come on, I think I'm really making progress with your mom's work friend. Please can I stay?" >
			<answer text="No!">
				<script function="disappear" param="Stieg" />
			</answer>
			<answer text="Okay, but get on your head!">
				<script function="rotateZ" />
			</answer>
			<answer text="Okay but you're bananas now!">
				<script function="changeModels" tag="leftLeg" param="banana" />
			</answer>
		</question>
		
	</opener>
	
	<opener tag="intelligent" id="Ask me an intelligent question!">
		<question text="Okay, kid. What's your favourite movie?">
			<answer text="The Matrix!">
				<script function="changeTextures" tag="furniture" param="code"/>
			</answer>
			<answer text="Anaconda!">
				<script function="changeModels" tag="leftArm" param="snake"/>
			</answer>
			<answer text="Beethoven Lives Upstairs!">
				<script function="playSound" param="beethoven"/>
			</answer>
		</question>
		
	</opener>
	
	<opener tag="death" id="What happens when you die?">
		<question text="Not much of anything I imagine. Probably everything changes colour. What colour do you think is the afterlife colour?" >
			<answer text="Blue!">
				<script function="changeColour" param="blue" />
			</answer>
			<answer text="Fuchsia!">
				<script function="changeColour" param="fuchsia" />
			</answer>
			<answer text="Chartreuse!">
				<script function="changeColour" param="chartreuse" />
			</answer>
		</question>
	</opener>
	
	
		
</dialog>